{
  "name": "adequate-little-templates",
  "version": "1.0.0",
  "description": "A minimal, CSP-safe templating language",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc && cp dist/index.js dist/index.mjs",
    "test": "ava",
    "size": "gzip -c dist/index.js | wc -c",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "template",
    "templating",
    "csp-safe",
    "minimal",
    "tiny"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bglw/adequate-little-templates.git"
  },
  "homepage": "https://github.com/bglw/adequate-little-templates#readme",
  "bugs": {
    "url": "https://github.com/bglw/adequate-little-templates/issues"
  },
  "author": "Liam Bigelow",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "ava": "^6.4.1",
    "typescript": "^5.3.0"
  }
}
